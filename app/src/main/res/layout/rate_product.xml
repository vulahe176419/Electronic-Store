<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Thông tin sản phẩm: Hình ảnh + Tên + Số lượng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_laptop"
            android:contentDescription="Hình ảnh sản phẩm"
            android:layout_marginEnd="12dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Tên sản phẩm"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#666666"
                android:text="Số lượng: 1"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Đánh giá số sao -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đánh giá sản phẩm: "/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0" />
    </LinearLayout>

    <!-- Nút thêm hình ảnh và video -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <Button
            android:id="@+id/btnAddImage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Hình ảnh"
            android:drawableTop="@android:drawable/ic_menu_gallery"/>

        <Button
            android:id="@+id/btnAddVideo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Video"
            android:drawableTop="@android:drawable/ic_menu_camera"/>
    </LinearLayout>

    <!-- RecyclerView hiển thị danh sách media đã chọn -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMediaPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:nestedScrollingEnabled="false"/>

    <!-- Tiêu đề đánh giá -->
    <EditText
        android:id="@+id/edtReviewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tiêu đề đánh giá chất lượng sản phẩm"
        android:textSize="16sp"
        android:padding="8dp"
        android:layout_marginTop="8dp"/>

    <!-- Mô tả chi tiết -->
    <EditText
        android:id="@+id/edtComment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Mô tả chi tiết đánh giá"
        android:textSize="14sp"
        android:padding="8dp"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5"
        android:layout_marginTop="8dp"/>

    <!-- Tùy chọn đánh giá ẩn danh -->
    <CheckBox
        android:id="@+id/chkAnonymous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đánh giá ẩn danh"
        android:layout_marginTop="8dp"/>

    <!-- Nút Submit -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gửi"
        android:backgroundTint="@color/orange"
        android:textColor="@android:color/white"
        android:layout_marginTop="12dp"/>
</LinearLayout>